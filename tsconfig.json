{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "declaration": true,
    "outDir": "lib-es",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib-ts/*"],
      "@UNIT/*": ["tests/unit/*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "lib-ts/**/*.ts",
    "tests/unit/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
